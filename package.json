    "license": "ISC",
    "dependencies": {
        "axios": "^0.19.0",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "helmet": "^3.21.1",
        "node-fetch": "^2.6.1",
        "nodemon": "^1.19.3"
    },
    "devDependencies": {
        "concurrently": "^5.0.0"
    }
}